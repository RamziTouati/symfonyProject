{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <td rowspan="6"><img src="{{asset('uploads/')}}{{post.image}}" alt="img" style="width: 400px;"></td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ post.body }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ post.time ? post.time|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-2">
        <a class="btn btn-secondary" href="{{ path('post_index') }}">back to list</a>
    </div>
    <div class="col-2">
        <a class="btn btn-info" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
    </div>
    <div class="col-2">
        {{ include('post/_delete_form.html.twig') }}
    </div>
    

   

{% endblock %}
