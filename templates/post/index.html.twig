{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="col-10">
    <h1>Posts</h1>
    </div>
    <div class="col-2">
    <a style="" class="btn btn-success" href="{{ path('post_new') }}">+ Create new</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Time</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td style=" display: block; width: 100px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">{{ post.body }}</td>
                <td>{{ post.time ? post.time|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.slug }}</td>
                <td>
                    <a type="button" class="btn btn-info" href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a type="button" class="btn btn-warning" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
