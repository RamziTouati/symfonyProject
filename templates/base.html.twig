<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Symfony PROJECT{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
          
         <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400&display=swap" rel="stylesheet">
           <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="/assets/css/app.css">
            <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
        {% endblock %}

        {% block javascripts %}
        <script src="https://kit.fontawesome.com/edf087e98e.js" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="  crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <div class="site-header">
            <header class="container">
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="logo">
                            <h2 class="text-uppercase">
                                Symfony-PROJECT
                            </h2>
                        </div>  
                    </div>
                    <div class="col-12 col-sm-6 ">
                    </div>
                </div>
            </header>
        </div>

        <nav class="main-nav navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                            <a class="nav-link" href="/">Acceuil<span class="sr-only">(current)</span></a>
                        </li>

                        {# condition si USER est connecter ou non #}

                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="#">{{app.user.fullname}}</a>
                            </li>
                            {% if app.user.fullname == "useradmin" %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('post_index')}}">Posts</a>
                            </li>
                            
                             {% endif %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('security_logout')}}">DÃ©connexion</a>
                            </li>
                         {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('register_user')}}">Inscription</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('security_login')}}">Connexion</a>
                            </li>
                         {% endif %}
                         <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                         </li>
                </ul>
                <div class="form-inline my-2 my-lg-0">
                <ul class="socials float-right mt-4 p-2">
                            <li><a target="_blank" href="https://www.facebook.com/" class="p-2"><i class="fab fa-facebook"></i></a></li>
                            <li><a target="_blank" href="https://www.instagram.com/" class="p-2"><i class="fab fa-instagram"></i></a></li>
                            <li><a target="_blank" href="https://www.youtube.com/" class="p-2"><i class="fab fa-youtube"></i></a></li>
                            <li><a target="_blank" href="https://www.twitter.com/" class="p-2"><i class="fab fa-twitter"></i></a></li>
                        </ul>
                </div>
            </div>
        </nav>


        <div class="container mt-4">
            <div class="row">
             {% block body %}{% endblock %}
            </div>
        </div>
        <div class="footer">
            <footer class="text-center text-capitalize mt-4">
                <ul class="mt-3">
                    <li>SYMFONY-PROJECT &copy;2021</li>
                    <li><a href="/contact">Contactez nous</a></li>
                </ul>
            </footer>
        </div>
    </body>
</html>
